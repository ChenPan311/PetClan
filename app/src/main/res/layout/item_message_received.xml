<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/message_body_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_shape"
        android:backgroundTint="@color/colorAccent"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="hi man, how are you?"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:paddingTop="11dp"
        app:layout_goneMarginStart="10dp"
        android:text="11:40 | 25.09"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/message_body_tv"
        app:layout_constraintStart_toStartOf="@+id/message_body_tv"
        app:layout_constraintTop_toBottomOf="@+id/message_body_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>