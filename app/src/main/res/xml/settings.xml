<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Sign Up">

        <EditTextPreference
            android:key="username_et"
            android:title="Username"
            android:summary="Choose your username"
            android:textAllCaps="false"
            android:dialogTitle="Username"
            android:dialogMessage="Enter a Username:" />

        <EditTextPreference
            android:key="password_et"
            android:title="Password"
            android:summary="Choose your password"
            android:textAllCaps="false"
            android:dialogTitle="Password"
            android:dialogMessage="Enter your Password:" />

    </PreferenceCategory>

</PreferenceScreen>