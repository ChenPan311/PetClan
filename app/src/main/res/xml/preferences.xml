<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="Your Details">

        <EditTextPreference
            android:key="username_et"
            android:title="Username"
            android:summary="Change your username"
            android:textAllCaps="false"
            android:dialogTitle="Username"
            android:dialogMessage="Enter a Username:" />

        <EditTextPreference
            android:key="password_et"
            android:title="Password"
            android:summary="Change your password"
            android:textAllCaps="false"
            android:dialogTitle="Password"
            android:dialogMessage="Enter your Password:" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Location"
        android:icon="@drawable/ic_baseline_location_black_24">

        <EditTextPreference
            android:key="location_et"
            android:title="Where are you?"
            android:summary="Insert your location"
            android:textAllCaps="false"
            android:dialogTitle="Location"
            android:dialogMessage="Enter your Location:" />

        <SeekBarPreference
            android:key="location_sb"
            android:title="How far do you want to see?"
            android:summary=""
            android:max="100"
            android:textAllCaps="false" />

    </PreferenceCategory>

    <Preference
        android:key="help_pref"
        android:title="Help"
        android:textAllCaps="false" />

    <EditTextPreference
        android:key="account_deletion"
        android:title="Delete Your Account"
        android:textAllCaps="false"
        android:dialogTitle="Delete Your Account"
        android:dialogMessage="Enter your password:" />

</PreferenceScreen>